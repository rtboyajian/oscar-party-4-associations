<nav aria-label="breadcrumb">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/actors">Actors</a></li>
    <li><%= "#{@the_actor.last_name}, #{@the_actor.first_name}" %></li>
  </ul>
</nav>

<article>
  <header>
    <h1>
      <%= "#{@the_actor.first_name} #{@the_actor.last_name}" %>
    </h1>
  </header>
  <dl>
    <dt>
      Image
    </dt>
    <dd>
      <img src="<%= @the_actor.image %>" style="width:250px;">
    </dd>

    <dt>
      Dob
    </dt>
    <dd>
      <%= @the_actor.dob %>
    </dd>

    <dt>
      Bio
    </dt>
    <dd>
      <%= simple_format(@the_actor.bio) %>
    </dd>

    <dt>
      Internal ID
    </dt>
    <dd>
      <%= @the_actor.id %>
    </dd>
  </dl>
</article>

<article>
  <header>
    <h2>Filmography</h2>
  </header>
  <ul>
      <% @the_actor.filmography.each do |the_movie| %>

      <li>
        <a href="/movies/<%= the_movie.id %>"><%= the_movie.title %> (<%= the_movie.year %>)</a>
      </li>
    <% end %>
  </ul>
</article>
